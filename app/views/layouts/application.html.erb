<!DOCTYPE html>
<html>
  <head>
    <title>my Forest Buddies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>🏞</text></svg>">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-no-turbolink': 'reload' %>
    <%= javascript_include_tag 'application', 'data-no-turbolink': 'reload' %>

    <% if logged_in? %>
      <script type="text/javascript">
          window.currentUser =
            <%= render("api/users/details.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>
    <meta name="image" property="og:image" content="https://i.imgur.com/Cj2eKNa.png">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
